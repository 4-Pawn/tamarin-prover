theory Minimal_Crypto_API begin

// Function signature and definition of the equational theory E

functions: fst/1, pair/2, sdec/2, senc/2, snd/1
equations:
    fst(<x.1, x.2>) = x.1,
    sdec(senc(x.1, x.2), x.2) = x.1,
    snd(<x.1, x.2>) = x.2

rule (modulo E) NewKey:
   [ Fr( ~h ), Fr( ~k ) ]
  --[ NewKey( ~h, ~k ) ]->
   [ !Store( ~h, ~k ), Out( ~h ) ]

  /* has exactly the trivial AC variant */

rule (modulo E) EncryptMsg:
   [ !Store( h, k ), In( <h, m> ) ] --> [ Out( senc(m, k) ) ]

  /* has exactly the trivial AC variant */

rule (modulo E) WrapKey:
   [ !Store( h1, k1 ), !Store( h2, k2 ), In( <h1, h2> ) ]
  -->
   [ Out( senc(k1, k2) ) ]

  /* has exactly the trivial AC variant */

lemma (modulo E) NewKey_invariant [reuse, use_induction]:
  all-traces "¬(∃ #i #j h k f. (NewKey( h, k ) @ #i) ∧ (!KU( f, k ) @ #j))"
/* proof based on the same lemma modulo AC */
/*
guarded formula characterizing all counter-examples:
"∃ #i #j h k f. (NewKey( h, k ) @ #i) ∧ (!KU( f, k ) @ #j)"
*/
induction
  case induction
  simplify
  solve( (last(#j))  ∥ (last(#i)) )
    case case_1
    solve( !KU( f, ~k ) @ #j )
      case WrapKey
      by contradiction // from formulas
    qed
  next
    case case_2
    solve( !KU( f, ~k ) @ #j )
      case WrapKey
      by contradiction // from formulas
    qed
  qed
qed

lemma (modulo E) NewKey_secrecy:
  all-traces "¬(∃ #i #j h k. (NewKey( h, k ) @ #i) ∧ (K( k ) @ #j))"
/* proof based on the same lemma modulo AC */
/*
guarded formula characterizing all counter-examples:
"∃ #i #j h k. (NewKey( h, k ) @ #i) ∧ (K( k ) @ #j)"
*/
simplify
by contradiction // from formulas

/* All well-formedness checks were successful. */

end
